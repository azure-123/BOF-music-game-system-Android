<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <EditText
        android:id="@+id/search_input"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:hint="输入曲名/曲师名"/>
<!--    <Button-->
<!--        android:id="@+id/btn_search"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="搜索"/>-->
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            fancy:fb_borderColor="@color/purple_200"
            fancy:fb_borderWidth="2dp"
            fancy:fb_focusColor="#fffffefa"
            fancy:fb_defaultColor="@color/white"
            fancy:fb_fontIconSize="15sp"
            fancy:fb_radius="40dp"
            fancy:fb_text="搜索"
            fancy:fb_textColor="@color/purple_200" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/search_list"
        />
    </LinearLayout>
</LinearLayout>