<!--        android:layout_height="wrap_content"-->
<!--        android:text=""-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"/>-->
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/bof_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        fancy:fb_borderColor="@color/purple_200"
        fancy:fb_borderWidth="2dp"
        fancy:fb_focusColor="#fffffefa"
        fancy:fb_defaultColor="@color/white"
        fancy:fb_fontIconSize="15sp"
        fancy:fb_radius="40dp"
        fancy:fb_text=""
        fancy:fb_textColor="@color/purple_200" />
</androidx.constraintlayout.widget.ConstraintLayout>